<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>

        <referenceContainer name="header.container">
            <container name="header.panel.wrapper.checkout" htmlClass="panel wrapper" htmlTag="div" before="-">
                  <container name="header.panel.checkout" htmlTag="div" htmlClass="panel header" before="-">
                        <block class="Magento\Theme\Block\Html\Header\Logo" name="logo.checkout">
                          <arguments>
                              <argument name="logo_img_width" xsi:type="number">189</argument>
                              <argument name="logo_img_height" xsi:type="number">64</argument>
                          </arguments>
                      </block>
                </container>           
          </container>            
        </referenceContainer>
		<referenceContainer name="header-wrapper-container" remove="true"/>
		<referenceContainer name="header.panel.wrapper" remove="true"/>
		<referenceBlock name="footer.content" remove="true"/>
    </body>
</page>

